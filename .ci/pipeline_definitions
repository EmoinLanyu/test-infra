test-infra:
  template: 'default'
  inherit:
    ti_default_traits: &ti_default_traits
      scheduling:
        suppress_parallel_execution: true
      version:
        preprocess:
          'inject-commit-hash'
        inject_effective_version: true
      notifications:
        default:
          on_error:
            triggering_policy: 'only_first'
    ti_docker_images: &ti_docker_images
      publish:
        dockerimages:
            tm-controller:
              registry: 'gcr-readwrite'
              image: eu.gcr.io/gardener-project/gardener/testmachinery/testmachinery-controller
              dockerfile: 'Dockerfile'
              target: tm-controller
              tag_as_latest: true
            tm-run:
              registry: 'gcr-readwrite'
              image: eu.gcr.io/gardener-project/gardener/testmachinery/testmachinery-run
              dockerfile: 'Dockerfile'
              target: tm-run
              tag_as_latest: true
    ti_test_steps: &ti_test_steps
      check:
        image: 'golang:1.12.0'
      test:
        image: 'golang:1.12.0'

  jobs:
    head-update:
      traits:
        <<: *ti_default_traits
        <<: *ti_docker_images
        draft_release: ~
      steps:
        <<: *ti_test_steps
        integration:
          image: 'eu.gcr.io/gardener-project/cc/job-image-golang:0.5.0'
          depends:
          - publish
    pull-request:
      traits:
        <<: *ti_default_traits
        <<: *ti_docker_images
        pull-request: ~
      steps:
        <<: *ti_test_steps
        integration:
          image: 'eu.gcr.io/gardener-project/cc/job-image-golang:0.5.0'
          depends:
          - publish
    release:
      traits:
        version:
          preprocess: 'finalize'
        release:
          nextversion: 'bump_minor'
        scheduling:
          suppress_parallel_execution: true
        <<: *ti_docker_images
      steps:
        <<: *ti_test_steps

    #####################
    #      Images       #
    #####################
